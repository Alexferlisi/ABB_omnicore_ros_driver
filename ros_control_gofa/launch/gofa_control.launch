<launch>
  <arg name="yamlFile" default="$(find ros_control_gofa)/config/gofa_cfg.yaml" />
  <rosparam command="load" file="$(arg yamlFile)" />

  <group ns="Gofa">

    <!-- Load the URDF pkg -->
    <include file="$(find robots_description)/launch/display.launch">
      <arg name="robot" value="gofa" />
    </include>

    <node pkg="ros_control_gofa" name="gofa_hw_interface" type="gofa_control_node" output="screen" />
  </group>

</launch>